<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.example.ap1_poc.route</groupId>
  <artifactId>POTS_FTP_Post-Feature</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>AP1_POC POTS_FTP_Post-0.1.0-SNAPSHOT (0.1,Routes) Feature</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.karaf.tooling</groupId>
        <artifactId>features-maven-plugin</artifactId>
        <version>2.2.9</version>
        <executions>
          <execution>
            <id>create-kar</id>
            <goals>
              <goal>create-kar</goal>
            </goals>
            <configuration>
              <finalName>pots_ftp_post_0_1</finalName>
              <resourcesDir>${project.build.directory}/bin</resourcesDir>
              <featuresFile>${basedir}/src/main/bundle-resources/feature.xml</featuresFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.5.1</version>
        <executions>
          <execution>
            <id>install-jar-lib</id>
            <phase>validate</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <groupId>org.example.ap1_poc.route</groupId>
              <artifactId>POTS_FTP_Post_POTS_FTP</artifactId>
              <version>0.1.0</version>
              <packaging>jar</packaging>
              <file>../../../../process/AP1_POC/POTS/pots_ftp_0.1/target/pots_ftp_0_1.jar</file>
              <generatePom>true</generatePom>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
